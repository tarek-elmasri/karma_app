

<h1>
  قائمة العملاء
</h1>
<hr>
<div>
  <h6>اجمالي عدد العملاء: <%= @totals["total_clients_count"] %></h6>
  <h6>اجمالي المبيعات: <%= @totals["total_sales"] %></h6>
  <h6>اجمالي المدفوعات: <%= @totals["total_payments"] %></h6>

  <p class='px-4'>
    - اجمالي النقدي: <%= Payment.total_cash %><br>
    - اجمالي التحويل البنكي: <%= Payment.total_transfer %>
  </p>
  <h6>اجمالي المتبقي: <%= @totals["total_remaining_balance"] %></h6>
</div>
<hr>
  <div>
    <%= render partial: 'clients/partials/search'%>
  </div>
<hr>
<div class='table-responsive mt-2'>
  <table class='table table-success table-hover '>
    <thead class='table-dark'>
      <tr>
        <th scope="col">#</th>
        <th scope="col">الاسم</th>
        <th scope="col">المنطقة</th>
        <th scope="col">عدد الفواتير</th>
        <th scope="col">قيمة الفواتير</th>
        <th scope="col">المبلغ المتبقي</th>
        <th scope='col'></th>
      </tr>
    </thead>
    <tbody>
      <%@clients.each do |client|%>
        <tr>
          <th scope='row'><%= client.id %></th>
          <td><%= client.name%> </td>
          <td><%= client.area%></td>
          <td><%= client[:invoices_count] %></td>
          <td><%=client[:sales]%></td></td>
          <td><%=client[:remaining_balance]%></td>
          
          <td><%= link_to "عرض", client_path(id:client.id), class: 'btn btn-outline-success btn-sm' %></td>
        </tr>
      <%end%>
    <tfoot class='table-dark'>
      <tr>
        <th>#</th>
        <td></td>
        <td></td>
        <td><%= @totals["total_invoices_count"] %></td>
        <td><%= @totals["total_sales"] %></td>
        <td><%= @totals["total_remaining_balance"]%></td>
        <td></td>
      </tr>
    </tfoot>
    </tbody>
  </table>

  
</div>
