<h3>فاتورة شراء</h3>

 <div class='form-control'>

    <%= form_for @invoice , url: invoice_path do  |form| %>
      <% if @invoice.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <% @invoice.errors.full_messages.each do |msg| %>
            <div><%= '* ' + msg %></div>
          <% end %>
        </div>
      <% end %>

      <div class='m-3'>
        <%= form.label "العميل", class: 'form-label' %>
        <%= form.select :client_id, Invoice.clients_list ,class: 'form-control' %>
      </div> 

      <div class='m-3'>
        <%= form.label "رقم الفاتورة", class: 'form-label' %>
        <%= form.text_field :number, class: 'form-control' %>
      </div>

      <div class='m-3'>
        <%= form.label "قيمة الفاتورة", class: 'form-label' %>
        <%= form.text_field :value, class: 'form-control' %>
      </div>


      <div class='m-3'>
        <%= form.label "تاريخ الفاتورة", class: 'form-label' %>
        <%= form.date_field :date  %>
      </div>

      <div class='m-3 mb-3'> 

        <%= form.submit 'حفظ', class: 'btn btn-success' %>
        <%= link_to "عودة", client_path(@invoice.client) , class: 'btn btn-primary' %>
      </div>


    <%end%>

  </div>